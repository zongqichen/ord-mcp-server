{
    "name": "ord-mcp-server",
    "version": "0.0.1",
    "description": "A clean MCP server providing ORD specification access and concept explanations",
    "main": "srv/ord-mcp-server.js",
    "scripts": {
        "start": "cds-serve"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "axios": "^1.6.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "@sap/cds": "^9",
        "@sap/xssec": "^3",
        "@cap-js/sqlite": "*"
    },
    "devDependencies": {
        "@sap/cds-dk": "^9"
    },
    "keywords": [
        "mcp",
        "ord",
        "cap",
        "documentation",
        "sap"
    ],
    "author": "ORD MCP Server",
    "license": "MIT",
    "engines": {
        "node": ">=22.0.0"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "credentials": {
                    "url": ":memory:"
                }
            },
            "auth": {
                "[development]": "mocked",
                "[production]": "xsuaa"
            },
            "ORD MCP Service": {
                "model": "./srv/ord-mcp-server"
            }
        },
        "build": {
            "target": "gen",
            "tasks": [
                {
                    "for": "nodejs",
                    "src": "srv",
                    "options": {
                        "model": [
                            "db",
                            "srv",
                            "app"
                        ]
                    }
                }
            ]
        },
        "serve": {
            "from": "srv/"
        },
        "server": {
            "index": true
        }
    }
}
